<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/Transaction_tvProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="[Name Here]"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/Transaction_tvQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="[Qty. Here]"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/Transaction_tvCost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="[Cost Here]"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/Transaction_tvTotal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="[Total Here]"
        android:textColor="#000000"
        />

</LinearLayout>