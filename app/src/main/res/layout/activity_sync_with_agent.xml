<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/Sync_rlConnectivityStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Sync_tvConnectivityLabel"
                style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connected to:" />

            <TextView
                android:id="@+id/Sync_tvConnectivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Sync_tvConnectivityLabel"
                android:text="None" />

            <ProgressBar
                android:id="@+id/Sync_pbConnectivityProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Sync_rlSyncProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Sync_rlConnectivityStatus">

            <TextView
                android:id="@+id/Sync_tvSyncProductsLabel"
                style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Products" />

            <TextView
                android:id="@+id/Sync_tvSyncProductsResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Sync_tvSyncProductsLabel"
                android:text="Ready to Sync" />

            <ProgressBar
                android:id="@+id/Sync_pbSyncProductsProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Sync_rlSyncRewards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Sync_rlSyncProducts">

            <TextView
                android:id="@+id/Sync_tvSyncRewardsLabel"
                style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rewards" />

            <TextView
                android:id="@+id/Sync_tvSyncRewardsResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Sync_tvSyncRewardsLabel"
                android:text="Ready to Sync" />

            <ProgressBar
                android:id="@+id/Sync_pbSyncRewardsProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Sync_rlSyncSales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Sync_rlSyncRewards">

            <TextView
                android:id="@+id/Sync_tvSyncSalesLabel"
                style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sales" />

            <TextView
                android:id="@+id/Sync_tvSyncSalesResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Sync_tvSyncSalesLabel"
                android:text="Ready to Sync" />

            <ProgressBar
                android:id="@+id/Sync_pbSyncSalesProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Sync_rlSyncDeliveries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Sync_rlSyncSales">

            <TextView
                android:id="@+id/Sync_tvSyncDeliveriesLabel"
                style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deliveries" />

            <TextView
                android:id="@+id/Sync_tvSyncDeliveriesResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Sync_tvSyncDeliveriesLabel"
                android:text="Ready to Sync" />

            <ProgressBar
                android:id="@+id/Sync_pbSyncDeliveriesProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:visibility="gone" />

        </RelativeLayout>

        <View
            android:id="@+id/Sync_viewAgentDeviceListSeperator"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#C0C0C0"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/Sync_rlSyncDeliveries"/>

        <RelativeLayout
            android:id="@+id/Sync_rlAgentDeviceList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Sync_viewAgentDeviceListSeperator"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/Sync_tvAgentDeviceListLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agent Device List"
                android:textSize="10pt"
                android:textStyle="bold"
                android:textColor="#000000"
                />

            <ListView
                android:id="@+id/Sync_lvDeviceList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below = "@+id/Sync_tvAgentDeviceListLabel"
                android:layout_gravity="center_horizontal" />

        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/Sync_bSync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Synchronize"
        android:visibility="gone"/>

    <Button
        android:id="@+id/Sync_bClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Done"
        android:visibility="gone" />

</LinearLayout>